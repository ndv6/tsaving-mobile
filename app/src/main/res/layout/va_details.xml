<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/va_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tabungan Rumah"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginTop="30sp"
        android:layout_marginStart="10sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/acc_number_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VIRTUAL ACCOUNT NUMBER"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="10dp"
        android:background="@drawable/text_view_background"
        app:layout_constraintTop_toBottomOf="@id/va_label"
        app:layout_constraintBottom_toTopOf="@id/va_number"
        />

    <TextView
        android:id="@+id/va_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="200708091234123"
        android:textSize="30sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/acc_number_text"
        app:layout_constraintStart_toStartOf="@id/va_label"
        app:layout_constraintEnd_toEndOf="@id/va_label"
        />

    <TextView
        android:id="@+id/balance_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BALANCE"
        android:textSize="15sp"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="10dp"
        android:background="@drawable/text_view_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/va_number"
        app:layout_constraintBottom_toTopOf="@id/va_balance"
        />

    <TextView
        android:id="@+id/va_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rp 50.000,00"
        android:textSize="30sp"
        android:paddingTop="10dp"
        android:paddingStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/balance_text"
        app:layout_constraintStart_toStartOf="@id/va_label"
        app:layout_constraintEnd_toEndOf="@id/va_label"
        />

    <Button
        android:id="@+id/btn_va_edit"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:background="@drawable/button_rounded"
        android:textColor="@color/colorLight"
        app:layout_constraintBottom_toTopOf="@id/btn_va_add_balance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/btn_va_add_balance"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Add Balance"
        android:background="@drawable/button_rounded"
        android:textColor="@color/colorLight"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/btn_va_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_del_va"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Delete VA"
        android:background="@drawable/button_rounded"
        android:textColor="@color/colorLight"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/btn_va_add_balance"
        app:layout_constraintBottom_toTopOf="@id/btn_trf_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/btn_trf_main"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Transfer to main"
        android:background="@drawable/button_rounded"
        android:textColor="@color/colorLight"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/btn_del_va"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>