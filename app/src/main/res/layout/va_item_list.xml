<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item_list_va"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:layout_marginTop="5sp"
    app:cardCornerRadius="2sp"
    android:layout_marginBottom="5sp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20sp"
        android:paddingStart="10sp">

        <TextView
            android:id="@+id/tv_item_list_va_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VA Number"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_item_list_va_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VA label"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/tv_item_list_va_num"
            app:layout_constraintStart_toStartOf="@id/tv_item_list_va_num"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_item_list_va_balance"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            style="@style/dashboard_tv_primary"
            android:text="Rp. 50000"
            app:layout_constraintBottom_toBottomOf="@id/tv_item_list_va_num"
            app:layout_constraintTop_toTopOf="@id/tv_item_list_va_num"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_item_list"/>

        <ImageView
            android:id="@+id/iv_item_list"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_item_list_va_num"
            app:layout_constraintBottom_toBottomOf="@id/tv_item_list_va_num"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

