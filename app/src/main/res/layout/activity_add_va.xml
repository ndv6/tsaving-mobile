<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_vad"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageButton
            android:id="@+id/btn_addva_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_margin="15dp"
            android:layout_marginLeft="50dp"
            app:layout_constraintTop_toTopOf="@+id/tb_vad"
            app:layout_constraintStart_toStartOf="@+id/tb_vad"
            app:layout_constraintBottom_toBottomOf="@+id/tb_vad"
            />
        <TextView
            android:textAllCaps="true"
            android:layout_gravity="center"
            android:text = "Virtual Account"
            android:textStyle = "bold"
            android:textColor = "@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_daily"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tb_vad"
            app:layout_constraintEnd_toEndOf="@+id/tb_vad"
            app:layout_constraintBottom_toBottomOf="@+id/tb_vad" />
        />
    </androidx.appcompat.widget.Toolbar>



    <TextView
        android:id="@+id/tv_addva_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:layout_marginTop="150dp"
        android:elegantTextHeight="true"
        android:text="Add Virtual Account"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tb_vad" />

    <TextView
        android:id = "@+id/tv_addva_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Label"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="65dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:elegantTextHeight="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_addva_title"
        />

    <EditText
        android:id = "@+id/et_addva_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:background="#f0f0f0"
        android:padding = "15dp"
        android:hint = "Input label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_addva_label" />

    <TextView
        android:id = "@+id/tv_addva_warna"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Color"
        android:layout_marginLeft = "50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="35dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:elegantTextHeight="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_addva_label"
        />

    <!--    <EditText-->
    <!--        android:id = "@+id/txt_warna"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginLeft="50dp"-->
    <!--        android:layout_marginRight="50dp"-->
    <!--        android:layout_marginTop="10dp"-->
    <!--        android:hint = "Input color"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toBottomOf="@+id/lbl_warna" />-->

    <Spinner
        android:id="@+id/sp_addva_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_addva_warna"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft = "50dp"
        android:layout_marginRight="50dp"
        android:entries="@array/color_va"
        android:background="#f0f0f0"
        />

    <Button
        android:id="@+id/btn_addva_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "SUBMIT"
        android:layout_margin="50dp"
        android:textSize = "16dp"
        android:backgroundTint="@color/colorPrimary"
        android:background="@drawable/button_oval"
        android:padding="20dp"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>