<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_transfer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="528dp"
        />

    <ImageButton
        android:id="@+id/back_button_tf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_margin="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/txt_toolbar_tf"
        android:textAllCaps="true"
        android:text="TRANSFER"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/toolbar_transfer"
        app:layout_constraintEnd_toEndOf="@id/toolbar_transfer"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_transfer" />
    <TextView
        android:id="@+id/txt_tf_from"
        android:text="Transfer From"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingVertical="8dp"
        android:background="@drawable/border_bottom"
        app:layout_constraintTop_toBottomOf="@id/toolbar_transfer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txt_tf_from_name"
        android:text="VA Tabungan Rumah"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toBottomOf="@id/txt_tf_from"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txt_from_num"
        android:text="2007268321001"
        android:textSize="16sp"
        android:textColor="@color/colorGrey"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toBottomOf="@id/txt_tf_from_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txt_tf_to"
        android:text="Transfer To"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingVertical="8dp"
        android:background="@drawable/border_bottom"
        app:layout_constraintTop_toBottomOf="@id/txt_from_num"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txt_tf_to_name"
        android:text="Main Account"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toBottomOf="@id/txt_tf_to"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txt_to_num"
        android:text="2007268321"
        android:textSize="16sp"
        android:textColor="@color/colorGrey"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toBottomOf="@id/txt_tf_to_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txt_tf_information"
        android:text="Transfer Information"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingVertical="8dp"
        android:background="@drawable/border_bottom"
        app:layout_constraintTop_toBottomOf="@id/txt_to_num"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txt_tf_amount_title"
        android:text="Amount"
        android:textSize="14sp"
        android:textColor="@color/colorGrey"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/txt_tf_information"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/txt_tf_amount_input"
        android:hint="Input Amount Transfer"
        android:textColorHint="@color/colorGrey"
        android:textSize="16sp"
        android:inputType="number"
        android:textColor="@color/colorGrey"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:background="@drawable/edittext_rounded"
        app:layout_constraintTop_toBottomOf="@id/txt_tf_amount_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/btn_transfer"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:text="TRANSFER"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_rounded"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>